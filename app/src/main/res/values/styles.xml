<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.FleaMarket.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_large</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="iconTint">@color/on_primary</item>
        <item name="android:paddingStart">@dimen/space_md</item>
        <item name="android:paddingEnd">@dimen/space_md</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.FleaMarket.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_large</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="iconTint">@color/primary</item>
    </style>

    <style name="Widget.FleaMarket.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/corner_large</item>
        <item name="backgroundTint">@color/primary_light</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="iconTint">@color/primary_dark</item>
    </style>

    <style name="Widget.FleaMarket.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_medium</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_medium</item>
        <item name="boxStrokeColor">@color/primary_light</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="counterTextColor">@color/text_secondary</item>
    </style>

    <style name="Widget.FleaMarket.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">@dimen/corner_medium</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.FleaMarket.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/surface_alt</item>
        <item name="chipStrokeColor">@color/primary_light</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.FleaMarket.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.FleaMarket.Tab</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabRippleColor">@color/primary_light</item>
    </style>

</resources>

